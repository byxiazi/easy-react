{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "esnext",
    "module":"esnext",
    "strict": true,
    "sourceMap": true,
    "importHelpers": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": ["src/*"],
    },
  },
  "include": [
    "src",
  ],
  "exclude": [
    "**/__mocks__",
  ]
}
