{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es5",
    "module": "ES6",
    "lib": ["es2015", "es2016", "es2017", "DOM"],
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "typings",
    "outDir": "lib",
  },
  "include": ["src"],
  "exclude": ["**/__mocks__"]
}
